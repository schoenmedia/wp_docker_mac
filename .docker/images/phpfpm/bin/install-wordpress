#!/usr/bin/env bash

if [ $@ ]; then
    wp core download --path=/var/www/html/public_html/ --locale=de_DE --version=$1
else
    wp core download --path=/var/www/html/public_html/ --locale=de_DE --version=latest
fi


wp config create  --path=/var/www/html/public_html/ \ 
                  --dbname=wordpress \
                --dbuser=wordpress \
                --dbpass=wordpress \
                --dbhost=db \
                --dbprefix=wp_ \
&& wp core install  --path=/var/www/html/public_html/ \
                    --url=dev.local \
                    --title=Example \
                    --admin_user=admin \
                    --admin_password=admin123 \
                    --admin_email=info@example.com
